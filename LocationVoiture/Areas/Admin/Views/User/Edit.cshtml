                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                }

                <hr />

                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#revenue-chart" data-toggle="tab">Cars</a></li>
                        <li><a href="#sales-chart" data-toggle="tab">Booking Requests</a></li>
                        <li class="pull-left header"><i class="fa fa-inbox"></i> Informations</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="revenue-chart" style="position: relative; height: 300px;">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            UserName
                                        </th>

                                        <th>
                                            Logo
                                        </th>

                                        <th>
                                            Car Model
                                        </th>
                                        <th>Sub Category</th>

                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Cars)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User.UserName)
                                        </td>

                                       
                                        <td>
                                            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.TypeCar.Picture)"
                                                 class="thumbnail"
                                                 style=" width:48px;height:48px" />
                                        </td>
                                        

                                        <td>
                                            @Html.DisplayFor(modelItem => item.CarModel.Name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubCategory.Name)
                                        </td>

                                        <td>
                                            <button onclick="location.href='@Url.Action("Details", "Car", new { id = item.CarID })'" class="btn btn-primary">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                        </td>


                                    </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 300px;">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Booking Date
                                        </th>
                                        <th>Car</th>
                                        <th>State</th>

                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Reservations)
                                    {
                                    <tr>



                                        <td>
                                            @Html.DisplayFor(modelItem => item.BookingRequestDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Car.CarModel.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.bookingState)
                                        </td>

                                        <td>
                                            <button onclick="location.href='@Url.Action("Details", "AdminBooking", new { id = item.BookingID })'" class="btn btn-primary">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                        </td>


                                    </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>

    </div>

</section>
