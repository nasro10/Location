@model Location.Domain.Entities.Booking

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Rent Detail</h3>
    </div>
    <div class="box-body">

        <div class="col-md-9">
            <div class="post">
                <div class="user-block">
                    <img class="img-circle img-bordered-sm" src="~/Uploads/@Model.User.Picture" alt="User Image">
                    <span class="username">
                        <a href="#">@Model.User.UserName</a>
                        <a href="#" class="pull-right btn-box-tool"><i class="fa fa-times"></i></a>
                    </span>
                    <span class="description">
                        Sended a Request since @Model.BookingRequestDate.Day / @Model.BookingRequestDate.Month
                        / @Model.BookingRequestDate.Year
                    </span>
                </div>
                <!-- /.user-block -->
                <div class="row margin-bottom">
                    <div class="col-sm-6">
                        <p>Car's Type: @Model.Car.TypeCar.Name</p>
                        <img class="img-responsive" src="~/Uploads/@Model.Car.TypeCar.Picture" alt="Photo">
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-6">
                                Cars Pictures:
                                @foreach (var s in Model.Car.Images)
                                {
                                    <img class="img-responsive" src="~/Uploads/@s.FileName" alt="Photo">
                                }



                            </div>

                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <p>
                    Description: @Model.Note
                </p>
                <p>
                    @{
                        if (@Model.Delivery)
                        {
                            <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>With Delivery</a>
                        }
                        else
                        {
                            <a href="#" style="padding: 3px 10px 3px 10px; background-color:red " class="badge" readonly>Without Delivery</a>
                        }
                    }
                </p>
                <p>
                    @{
                        if (@Model.Driver)
                        {
                            <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>With Driver</a>
                        }
                        else
                        {
                            <a href="#" style="padding: 3px 10px 3px 10px; background-color:red " class="badge" readonly>Without Driver</a>
                        }
                    }
                </p>

            </div>
        </div>
    </div>
</div>
    


    @section scripts{}
